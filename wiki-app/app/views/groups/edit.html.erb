<h1>Edit <%= @group.name %></h1>

<%= form_for :group, url:'@group', method: :patch do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div>
    <%= f.submit "Edit Group" %>
  </div>
<% end  %>
