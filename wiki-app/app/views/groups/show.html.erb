<h1><%= @group.name %></h1>
<br>

  <% @group.categories.each do |category| %>
    <%= category.name %><br>
    <% category.articles.each do |article| %>
      <%= link_to article.name, article_path(article) %><br>
    <% end %>
  <% end %>
<br>
<%= link_to 'Create New Category', new_group_category_path(@group) %>
<%= link_to 'Create New Article', new_group_article_path(@group) %>


<% if current_user == @group.admin %>
  <%= link_to 'Admin Panel', group_admin_path(@group) %>
<% end %>

<% unless @group.members.include?(current_user) %>
  <div><%= button_to "Join Group", group_memberships_path(@group) %></div>
<% end %>
