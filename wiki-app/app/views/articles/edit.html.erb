<%= form_for :article, url:"/articles/#{@article.id}", method: :put do |f| %>
    <%= f.label :name, 'Article Name', value="#{@article.name}" %>
    <%= f.text_field :name %>
    <br>
    <%= f.cktext_area :content, ckeditor: {uiColor: '#AADC6E', tpplbar: 'mini'} %>
    <%= f.submit %>
    <% end %>
